.body{
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.header{
  height: 100px;
  width: 100%;
  /*row 横向  column 列表  */
  display: flex;
  flex-direction: row;
}

.avatar{
  width: 200px;
  height: 100px;
  margin: 0px 0px 0px 10px;
}

.info{
  display: flex;
  flex-direction: column;
  width: 100%;
}

.left{
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.right{
  flex: 1;
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.detail{
   display: flex;
   height: 100%;
  flex-direction: row;
  margin-bottom: 10px;

}
.edit{
  width: 100%;
  height: 90px;
  text-align: center;
  vertical-align:middle;
  padding-left: 10px;
  padding-right: 10px;
}

/*划线  */
.line {
   background-color: blue;
   height: 2rpx;
   width: 100%;
}

.moto{
  display: flex;
  height: 40px;
  align-items: center;
  margin-left: 10px;
  color: #ccc;
}

.history-table-wrap{
  display: flex;
  width: 100%;
  flex: 1;
  height: 300px;
  overflow-y: scroll;
}
/* 表格代码   */
.table{
  border:1px solid #dadada;
  border-right:0;
  border-bottom: 0;
  width: 100%;
  margin-left: 10px;
  margin-right: 10px;
}
.tr{
  width:100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
}
.td1,.td2{
  width: 28%;
  height: 100px;
  margin: 5px;
}